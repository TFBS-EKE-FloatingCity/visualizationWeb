
<canvas id="Energy-Consumption-Comparison" class="chartjs-render-monitor"></canvas>

<script>

    //Energy Consumption Comparison Chart Config
    var eccConfig = {
        type: 'bar',
        data: {
            labels: ["Comparison"],
            datasets: [{
                label: "Generated Energy",
                backgroundColor: ["rgba(4, 0, 219, 1)"],
                data: [],              
                borderWidth: 2
            }, {
                label: "Consumption",
                backgroundColor: ["rgba(219, 0, 40, 1)"],
                data: [],               
                borderWidth: 2
            }
                
            ]
        },
        options: {
            aspectRatio: 2,
            onResize: function (chart, size) {
                if (size.width < 685) {
                    chart.aspectRatio = 1;
                } else {
                    chart.aspectRatio = 2;
                }

                chart.update();
            },
            title: {
                display: true,
                text: 'Energy Consumption Comparison'
            },
            tooltips: {
                mode: 'index',
                intersect: false            
            },
            hover: {
                mode: 'nearest',
                intersect: false
            },
            scales: {
                xAxes: [{
                    display: false,                                   
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'MW / h'
                    },
                    ticks: {
                        min: 0
                    }
                }]
            }
        }
    }
    //end Config

    //Create and fill Energy-Consumption-Comparison Chart
    $(document).ready(function () {
        // chart
        var ctx = document.getElementById('Energy-Consumption-Comparison').getContext('2d');
        window.eccChart = new Chart(ctx, eccConfig);

        //fill chart with history from DB
        setInterval(function () {
            if (globals.cityDataHeadID != null) {
                $.ajax({
                    url: '/API/Dashboard/GetRecentlyGeneratedEnergy/' + globals.cityDataHeadID,
                    dataType: 'json',
                    type: 'GET',
                    contentType: 'application/json',
                    processData: false,
                    success: function (data, textStatus, jQxhr) {
                        var energy = 0;
                        var consumption = 0;
                        var chartData = [];
                        data = JSON.parse(data)
                        data.forEach(function (value) {

                            //if (value.Pump1 < 0) {
                            //    energy += (value.Pump1 * -1)
                            //} else {
                            //    consumption += value.Pump1
                            //};

                            //if (value.Pump2 < 0) {
                            //    energy += (value.Pump2 * -1)
                            //} else {
                            //    consumption += value.Pump2
                            //};
                             
                            //if (value.Pump3 < 0) {
                            //    energy += (value.Pump3 * -1)
                            //} else {
                            //    consumption += value.Pump3
                            //};

                            //Die Energie in MW/h errechnen
                            energy += Math.round(globals.MaxWind * (value.WindCurrent / 100));
                            energy += Math.round(globals.MaxSun * (value.SunCurrent/100));
                            consumption += Math.round(globals.MaxConsumption * (value.ConsumptionCurrent / 100));
                        })
                        globals.EnergyConsumptionComparisonVal = energy - consumption;
                        chartData[0] = energy;
                        chartData[1] = consumption; 
                        setEnergyConsumptionData(chartData);
                    },
                    error: function (jqXhr, textStatus, errorThrown) {
                        console.log(errorThrown);
                    }
                });
            }
        }, settings.updateRate)

    })

    //Update Chart
    function setEnergyConsumptionData(data) {
        eccConfig.data.datasets[0].data[0] = data[0]
        eccConfig.data.datasets[1].data[0] = data[1]
        window.eccChart.update()
    }

</script>