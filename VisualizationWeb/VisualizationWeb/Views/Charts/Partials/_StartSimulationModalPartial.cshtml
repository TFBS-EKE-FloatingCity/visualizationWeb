<button id="BtnStartSim" type="button" onclick="btnStartSim_Click()" class="btn btn-info btn-lg col-md-12" data-toggle="modal" data-target="#myModal">Start Simulation</button>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Scenarios</h4>
            </div>
            <div class="modal-body" id="StartSimModalBody">
                @*//Body will be filled with the API*@
            </div>
        </div>
    </div>
</div>

<script>
    function btnStartSim_Click()
    {
        $.ajax(
        {
            type: "Get",
            url: "/Dashboard/PartialSimulationStart",
            success: function (data)
            {
                $("#StartSimModalBody").html(data);
            }
        })

    }
</script>