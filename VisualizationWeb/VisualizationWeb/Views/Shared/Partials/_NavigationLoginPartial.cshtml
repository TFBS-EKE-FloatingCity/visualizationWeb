@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-login">
    <li>
        @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "glyphicon glyphicon-user" })
    </li>

    @{
           if(User != null)
           {
                if (User.IsInRole("Admin"))
                {

                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "glyphicon glyphicon-user" })</li>
                }
           }
        }

    <li><a href="javascript:document.getElementById('logoutForm').submit()" class="glyphicon glyphicon-log-out">Logout</a></li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-login">
    
    <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "glyphicon glyphicon-log-in" })</li>
</ul>

}
