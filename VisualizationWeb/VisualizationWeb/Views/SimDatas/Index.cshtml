@model IEnumerable<VisualizationWeb.Models.SimData>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SimTime) in hours
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wind) in %
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sun) in %
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consumption) in %
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SimTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consumption)
            </td>
            <td>
                <div class="actions-bar">
                    <a href="#" class="btn btn-lg btn-success" data-toggle="modal" data-target="#basicModal">Click to open Modal</a>
                    @Html.ActionLink(" ", "Edit", "SimDatas", new { id = item.SimDataID }, new { title = "Edit", @class = "glyphicon glyphicon-pencil btn btn-default btn-sm" })
                    @Html.ActionLink(" ", "Delete", "SimDatas", new { id = item.SimDataID }, new { title = "Delete", @class = "glyphicon glyphicon-trash btn btn-danger btn-sm" })
                </div>
            </td>
        </tr>
    }

</table>