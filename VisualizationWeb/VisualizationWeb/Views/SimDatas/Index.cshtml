@model IEnumerable<VisualizationWeb.Models.SimData>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SimTime) in hours
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wind) in %
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sun) in %
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consumption) in %
        </th>
        <th></th>
    </tr>
     <tr>
        <td>
            <a href="#" class="btn btn-sm btn-dashed" data-toggle="modal" data-target="#basicModal">Add Simulation Data</a>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SimTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consumption)
            </td>
            <td>
                <div class="actions-bar">
                    @Html.ActionLink(" ", "Edit", "SimDatas", new { id = item.SimDataID }, new { title = "Edit", @class = "glyphicon glyphicon-pencil btn btn-default btn-xs" })
                    @Html.ActionLink(" ", "Delete", "SimDatas", new { id = item.SimDataID }, new { title = "Delete", @class = "glyphicon glyphicon-trash btn btn-danger btn-xs" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <a href="#" class="btn btn-sm btn-dashed" data-toggle="modal" data-target="#basicModal">Add Simulation Data</a>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    }

</table>