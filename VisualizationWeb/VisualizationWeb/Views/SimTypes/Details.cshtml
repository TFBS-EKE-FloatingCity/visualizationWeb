@model VisualizationWeb.Models.SimType

@{
    ViewBag.Title = "Details";
}


<div class="app-headline app-headline--no-line">
    @Html.ActionLink(" ", "Index", new { }, new { @class = "glyphicon glyphicon-arrow-left back-to-list" })
    <h2>Simulation @Html.DisplayFor(model => model.Title)</h2>
    <div class="app-headline-actions">
        <a href="#" class="glyphicon glyphicon-pencil btn btn-default btn-sm" data-toggle="modal" data-target="#basicModal">Edit</a>
    </div>
</div>

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.SimFactor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SimFactor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Interval)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Interval)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>

<div class="app-headline app-headline--no-line">
    <h3>Simulation Data</h3>
    <div class="app-headline-actions">
        @if (ViewBag.showGenerateButton)
        {
            @Html.ActionLink("Auto Generate", "Edit", new { id = Model.SimTypeID }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-plus" })
        }
        @if (ViewBag.showDeleteButton)
        {
            @Html.ActionLink("Delete All", "DeletePos", new { id = Model.SimTypeID }, new { title = "Delete", @class = "glyphicon glyphicon-trash btn btn-danger btn-sm" })
        }
    </div>
</div>

@Html.Partial("../SimDatas/Index", Model.SimDatas.OrderBy(s => s.SimTime))

