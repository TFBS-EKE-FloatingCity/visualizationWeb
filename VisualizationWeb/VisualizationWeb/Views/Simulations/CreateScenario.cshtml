@model Simulation.Library.Models.SimScenario

@{
    ViewBag.Title = "Create Simulation";
}

<div class="app-headline">
    @Html.ActionLink(" ", "Index", new { }, new { @class = "glyphicon glyphicon-arrow-left back-to-list" })
    <h2>Create Simulation</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TimeFactor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.TimeFactor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TimeFactor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
        </div>
    </div>

    
    <div id="app">
        <div class="col-md-8">
            @Html.Partial("PartialViews/PartialPositionIndex", Model.SimPositions)
        </div>
        <div class="col-md-8">
            @Html.Partial("PartialViews/PartialPositionCreate", new Simulation.Library.Models.SimPosition { SimScenarioID = Model.SimScenarioID })
        </div>
    </div>

    @*<div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>*@
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
