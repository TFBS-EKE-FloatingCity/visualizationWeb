@model IEnumerable<Simulation.Library.ViewModels.SimScenarioVM.SimScenarioIndexViewModel>

@{
    ViewBag.Title = "Simulation";
}

<h2>Scenarios</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        

        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.SimScenarioID)
                @Html.CheckBoxFor(modelItem => item.isChecked)
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <th>
                @Convert.ToString(string.Format("{0:HH:mm}", item.StartDate))
                @*@Html.DisplayFor(modelItem => item.StartDate)*@
            </th>
            <th>
                @Convert.ToString(string.Format("{0:HH:mm}", item.EndDate))
                @*@Html.DisplayFor(modelItem => item.EndDate)*@
            </th>
        </tr>

    }

</table>

